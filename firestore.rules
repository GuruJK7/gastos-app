// firestore.rules
// Reglas de seguridad para Firestore
// Configurado para trabajar con Clerk Authentication
// Copia esto en Firebase Console → Firestore → Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función helper para verificar si es desarrollo
    function isDev() {
      return request.auth == null || request.auth.uid == 'dev_user_123';
    }
    
    // Colección: gastos
    // Permitir lectura y escritura si el usuario está autenticado
    match /gastos/{document=**} {
      // Permitir lectura si hay autenticación O si es dev
      allow read: if request.auth != null || isDev();
      
      // Permitir crear si hay autenticación O si es dev
      allow create: if (request.auth != null || isDev()) &&
                       request.resource.data.monto > 0 &&
                       request.resource.data.fecha != null &&
                       request.resource.data.categoria != null &&
                       request.resource.data.metodoPago != null &&
                       request.resource.data.userId != null;
      
      // Permitir actualizar si hay autenticación O si es dev
      allow update: if (request.auth != null || isDev()) &&
                       request.resource.data.monto > 0;
      
      // Permitir eliminar si hay autenticación O si es dev
      allow delete: if request.auth != null || isDev();
    }
    
    // Colección: usuarios
    match /usuarios/{userId} {
      allow read, write: if request.auth != null || isDev();
    }
    
    // Denegar acceso a cualquier otra colección
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
