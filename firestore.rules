// firestore.rules
// Reglas de seguridad para Firestore
// Configurado para trabajar con Clerk Authentication
// Copia esto en Firebase Console → Firestore → Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Colección: gastos
    // Permitir lectura y escritura si el usuario está autenticado
    match /gastos/{document=**} {
      // Permitir lectura si hay un token autenticado
      allow read: if request.auth != null;
      
      // Permitir crear si hay un token autenticado
      allow create: if request.auth != null &&
                       request.resource.data.monto > 0 &&
                       request.resource.data.fecha != null &&
                       request.resource.data.categoria != null &&
                       request.resource.data.metodoPago != null &&
                       request.resource.data.userId != null;
      
      // Permitir actualizar si hay un token autenticado
      allow update: if request.auth != null &&
                       request.resource.data.monto > 0;
      
      // Permitir eliminar si hay un token autenticado
      allow delete: if request.auth != null;
    }
    
    // Colección: usuarios
    match /usuarios/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Denegar acceso a cualquier otra colección
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
