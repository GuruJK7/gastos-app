// firestore.rules
// Reglas de seguridad para Firestore
// Configurado para trabajar con Clerk Authentication
// Copia esto en Firebase Console → Firestore → Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ─── Helper ────────────────────────────────────────────────
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    // ═══════════════════════════════════════════════════════════
    // FLAT COLLECTION: gastos  (legacy – still in use by useGastos)
    // ═══════════════════════════════════════════════════════════
    match /gastos/{gastoId} {

      // Read only own documents (query must include where('userId','==',uid))
      allow read: if request.auth != null &&
                     resource.data.userId == request.auth.uid;

      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.monto is number &&
                       request.resource.data.monto > 0 &&
                       request.resource.data.fecha != null &&
                       request.resource.data.categoria is string &&
                       request.resource.data.categoria.size() > 0 &&
                       request.resource.data.metodoPago is string &&
                       request.resource.data.metodoPago.size() > 0;

      allow update: if request.auth != null &&
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.monto is number &&
                       request.resource.data.monto > 0;

      allow delete: if request.auth != null &&
                       resource.data.userId == request.auth.uid;
    }

    // ═══════════════════════════════════════════════════════════
    // USER SUBCOLLECTIONS  users/{uid}/...
    // ═══════════════════════════════════════════════════════════
    match /users/{uid} {

      // ── accounts ─────────────────────────────────────────────
      match /accounts/{accountId} {
        allow read:   if isOwner(uid);

        allow create: if isOwner(uid) &&
                         request.resource.data.name is string &&
                         request.resource.data.name.size() > 0 &&
                         request.resource.data.currentBalance is number &&
                         request.resource.data.initialBalance is number;

        // Balance updates come through runTransaction (accountService / transactionService)
        allow update: if isOwner(uid) &&
                         request.resource.data.name is string &&
                         request.resource.data.currentBalance is number;

        allow delete: if isOwner(uid);
      }

      // ── transactions ─────────────────────────────────────────
      match /transactions/{txId} {
        allow read:   if isOwner(uid);

        allow create: if isOwner(uid) &&
                         request.resource.data.amount is number &&
                         request.resource.data.amount > 0 &&
                         request.resource.data.type is string &&
                         request.resource.data.accountId is string;

        // Transactions are immutable after creation — no update allowed.
        allow update: if false;

        allow delete: if isOwner(uid);
      }
    }

    // ── Deny everything else ─────────────────────────────────
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
