// firestore.rules
// Reglas de seguridad para Firestore
// Copia esto en Firebase Console → Firestore → Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Colección: gastos
    // Solo usuarios autenticados pueden leer/escribir sus propios gastos
    match /gastos/{document=**} {
      // Permitir lectura solo si el userId del documento coincide con el usuario autenticado
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      
      // Permitir crear solo si el userId que envía coincide con su uid
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.monto > 0 &&
                       request.resource.data.fecha != null &&
                       request.resource.data.categoria != null &&
                       request.resource.data.metodoPago != null;
      
      // Permitir actualizar solo si es propietario
      allow update: if request.auth != null && 
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.monto > 0;
      
      // Permitir eliminar solo si es propietario
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Colección: usuarios (opcional, para almacenar perfiles)
    match /usuarios/{userId} {
      // Usuario solo puede leer su propio perfil
      allow read: if request.auth != null && 
                     request.auth.uid == userId;
      
      // Usuario solo puede crear/actualizar su propio perfil
      allow write: if request.auth != null && 
                      request.auth.uid == userId;
    }
    
    // Denegar acceso a cualquier otra colección
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
